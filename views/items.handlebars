<div class="container-fluid mx-auto p-0">
       <div class="row justify-content-center" id="all-items">
        {{#each items}}
            <div class="card text-center col-lg-4 col-md-4 col-sm-12 mb-4 align-items-stretch item-card p-0">
                <img class="card-img-top" src="{{image}}" alt="{{name}}">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text">$it {{price}}</p>
                </div>
                
                <div class="card-footer">
                    <a href="#"><button class="btn btn-primary purchaseBtn">Purchase Item</button></a>
                </div>
            </div>
        {{/each}}
    </div>
</div>
