{{!-- Main Text --}}
<div id="main-header" class="container justify-content-center">
  <div class="row">
    <h1>Second Hand Treasures</h1>
  </div>
  <div class="row">
    <a href="#create-form"><button class="btn">Sign Up</button></a>
  </div>
</div>

{{!-- Registration Form / Add new user --}}
<div class="modal fade bd-example-modal-lg show" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" style="display: block;">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title h4" id="myLargeModalLabel">Sign In</h5>
        <a class="float-right"href="/login">Login <i class="fas fa-user fa-large"></i></a>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container col-12" id="newUserForm">
          <div class="container col-md-8">
            <form method="POST" action="/create" required="" minlength="1" id="create-form">
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="firstName">First Name</label>
                  <input type="text" class="form-control" id="firstName" placeholder="Name" required="" minlength="1">
                </div>
                <div class="form-group col-md-6">
                  <label for="lastName">Last Name</label>
                  <input type="text" class="form-control" id="lastName" placeholder="Lastname" required="" minlength="1">
                </div>

                {{!-- New Row Email and password--}}
                <div class="form-group col-md-6">
                  <label for="email">Enter email address.(This will be your username)</label>
                  <input type="email" class="form-control" id="email" placeholder="email@example.com" required=""
                    minlength="1">
                </div>
                <div class="form-group col-md-6">
                  <label for="password">Create a password</label>
                  <input type="text" class="form-control" id="password" placeholder="Create a password" required=""
                    minlength="1">
                </div>
                <div class="form-group col-md-12">
                  <div class="Modal-footer">
                    <button type="submit" class="btn" id="signUpBtn">Sign me up!</button>
                    <button type="button" class="btn"></button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="Signup-Error-Modal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalLabel">User Name Already in Use!</h5>
        <button type="btn" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <ul>Please choose a different username.</ul>
       <ul>Current Email-Address already in use.</ul>  
       <ul>Thank You.</ul>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
